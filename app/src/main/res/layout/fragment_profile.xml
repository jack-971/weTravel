<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <!--Profile picture and top section -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:id="@+id/profile_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/marty_byrd"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/border_color"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/subtext_margins"
        android:textSize="@dimen/minor_text"
        android:text="jack123"
        tools:text="Username"
        android:textColor="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/profile_username"
        android:id="@+id/profile_changeable">

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Add Friend"
        android:id="@+id/add_friend_button"
        android:background="@drawable/button"
        android:textSize="@dimen/button_text"
        android:visibility="gone"
        android:inputType="textCapSentences"
        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/profile_friends"
        android:textSize="@dimen/button_text"
        android:background="@drawable/tag"
        android:clickable="false"
        android:text="Friends"
        android:inputType="textCapSentences"
        android:visibility="gone"
        android:textColor="@color/tag_color"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/profile_friends_requested"
            android:textSize="@dimen/button_text"
            android:background="@drawable/tag"
            android:clickable="false"
            android:text="Requested"
            android:inputType="textCapSentences"
            android:visibility="gone"
            android:textColor="@color/tag_color"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="Accept"
            android:id="@+id/friend_accept"
            android:background="@drawable/button"
            android:textSize="@dimen/button_text"
            android:visibility="gone"
            android:inputType="textCapSentences"
            android:textColor="@color/button_text"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="Edit Profile"
            android:id="@+id/profile_edit"
            android:background="@drawable/button"
            android:textSize="@dimen/button_text"
            android:textColor="@color/button_text"
            android:visibility="visible"
            android:inputType="textCapSentences"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="Save Changes"
            android:id="@+id/profile_save"
            android:background="@drawable/button"
            android:textSize="@dimen/button_text"
            android:visibility="gone"
            android:inputType="textCapSentences"
            android:textColor="@color/button_text"/>

    </RelativeLayout>

    <!-- Invisible boxes for editing or viewing other peoples profiles-->

    <!-- Main body-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_margins"
        android:id="@+id/profile_info_section"
        android:background="@drawable/standard_border"
        app:layout_constraintTop_toBottomOf="@id/profile_changeable">

        <!-- Buttons layout-->
        <RelativeLayout
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/profile_buttons">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:text="Friends"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/button"
                android:id="@+id/profile_friends_button"
                android:textSize="@dimen/button_text"
                android:textColor="@color/button_text"
                android:inputType="textCapSentences"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/profile_friends_button"
                android:text="Map"
                android:layout_marginBottom="@dimen/_4sdp"
                android:id="@+id/profile_map_button"
                android:background="@drawable/button"
                android:textSize="@dimen/button_text"
                android:textColor="@color/button_text"
                android:inputType="textCapSentences"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/profile_map_button"
                android:text="Trips"
                android:background="@drawable/button"
                android:id="@+id/profile_trips_button"
                android:textSize="@dimen/button_text"
                android:textColor="@color/button_text"
                android:inputType="textCapSentences"
                />

        </RelativeLayout>

        <!-- Bio section-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/profile_buttons"
            android:id="@+id/profile_info"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_name_views"
                android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:textSize="@dimen/major_text"
            android:text="Jack McCambridge"
            tools:text="Full Name"
            android:textColor="@android:color/black"
            android:visibility="visible"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_edit_name"
                android:textSize="@dimen/major_text"
                android:padding="@dimen/_5sdp"
                android:text="Jack McCambridge"
                tools:text="Full Name"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_age"
            android:layout_marginTop="@dimen/subtext_margins"
            android:layout_below="@id/profile_name_views"
            android:textSize="@dimen/minor_text"
            tools:text="Age"
            android:text="28 years old"
            android:textColor="@color/minor_text"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_trip_details"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/profile_age"
            android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_current_trip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Vietnam Tour"
            android:textSize="@dimen/major_text"
            tools:text="Current Trip"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_current_trip_hyphen"
            android:text="-"
            android:textSize="@dimen/major_text"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_toRightOf="@id/profile_current_trip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_current_leg"
                android:text="Hanoi"
                android:textSize="@dimen/major_text"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toRightOf="@id/profile_current_trip_hyphen"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_home_location"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_below="@id/profile_trip_details"
            android:layout_marginTop="@dimen/subtext_margins"
            android:textSize="@dimen/minor_text"
            android:text="Belfast, Ireland"
            tools:text="Home Location"
            android:textColor="@color/minor_text"
            android:visibility="visible"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_edit_home_location"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="5dp"
                android:layout_below="@id/profile_trip_details"
                android:layout_marginTop="@dimen/subtext_margins"
                android:textSize="@dimen/minor_text"
                android:text="Belfast, Ireland"
                tools:text="Home Location"
                android:textColor="@color/minor_text"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

    <!-- Description Section-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_margins"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/profile_description"
        android:background="@drawable/standard_border"
        app:layout_constraintTop_toBottomOf="@id/profile_info_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a 28 year old traveller who enjoys exploring
new places. I have plans to travel Asia currently having recently come back
from a trip to South America."
            android:textColor="@android:color/black"
            android:textSize="@dimen/descriptive_text"
            tools:text="Description Section"
            android:visibility="visible"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a 28 year old traveller who enjoys exploring
new places. I have plans to travel Asia currently having recently come back
from a trip to South America."
            android:textColor="@android:color/black"
            android:textSize="@dimen/descriptive_text"
            tools:text="Description Section"
            android:visibility="gone"/>

    </RelativeLayout>>
    




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>