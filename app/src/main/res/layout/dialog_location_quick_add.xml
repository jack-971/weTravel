<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/change_password_dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/select_leg"
        android:id="@+id/select_leg_text"
        android:textSize="@dimen/_16sdp"/>

    <Spinner
        android:id="@+id/leg_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/select_leg_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/select_location_text"
        android:id="@+id/select_location_text"
        android:textSize="@dimen/_16sdp"
        android:layout_below="@id/leg_selection"/>

    <Spinner
        android:id="@+id/location_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@id/select_location_text"/>

</RelativeLayout>